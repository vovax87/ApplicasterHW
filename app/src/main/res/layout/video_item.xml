<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="hw.applicaster.vova.network.model.Entry" />

        <variable
            name="listener"
            type="hw.applicaster.vova.adapter.ApplicasterRecyclerAdapter.OnItemClickListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green100"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green300"
            android:onClick="@{() ->  listener.itemClicked(model)}"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/video_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="20"
                android:text="@{model.title}"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/video_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="80"
                android:text="@{model.summary}"
                android:textAppearance="?attr/textAppearanceListItemSecondary" />
        </LinearLayout>
    </LinearLayout>
</layout>